<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:background="#000000"
    tools:context="com.wpwiii.movement2contact.MainActivity"
    android:padding="0dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/ic_splashh"
        android:id="@+id/imageViewBackground"
        android:scaleType="fitXY"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="10dp"
        android:padding="0dp"
        android:paddingBottom="0dp"
        android:paddingEnd="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp"
        android:paddingStart="0dp"
        android:adjustViewBounds="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:cropToPadding="false" />

    <Button
        android:text="New"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonNew"
        android:maxWidth="125dp"
        android:background="#000000"
        android:textColor="#ffff00"
        android:textStyle="bold"
        android:layout_below="@+id/textViewAppName"
        android:layout_alignParentStart="true"
        android:layout_marginStart="110dp"
        android:layout_marginBottom="360dp" />

    <Button
        android:text="Resume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonResume"
        android:maxWidth="100dp"
        android:background="#545858"
        android:textColor="#c0c0c0"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:layout_marginStart="215dp"
        android:layout_marginBottom="360dp"
        android:layout_below="@+id/textViewAppName" />

    <TextView
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:textSize="70sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#000000"
        android:id="@+id/textViewAppName"
        android:fontFamily="fonts/Army.ttf"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/sound_transparent"
        android:id="@+id/imageViewSound"
        android:layout_alignParentStart="true"
        android:layout_marginTop="625dp"
        android:layout_marginStart="230dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/help_transparent"
        android:id="@+id/imageViewHelp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="625dp"
        android:layout_marginStart="150dp"/>

</RelativeLayout>
